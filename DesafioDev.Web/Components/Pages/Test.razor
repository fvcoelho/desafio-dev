@page "/test"
@rendermode InteractiveServer
@inject IWebHostEnvironment Environment

<PageTitle>Test Report</PageTitle>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Test Report</h3>
                    <div class="d-flex gap-2 align-items-center">
                        @if (!string.IsNullOrEmpty(reportGeneratedTime))
                        {
                            <small>Generated: @reportGeneratedTime</small>
                        }
                        <button class="btn btn-sm btn-light" @onclick="RefreshReport">
                            Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-warning m-3" role="alert">
                            <strong>Notice:</strong> @errorMessage
                            <br/>
                            <small class="text-muted">The test report is generated during the Docker build process.</small>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(htmlReport))
                    {
                        <iframe srcdoc="@htmlReport" style="width: 100%; height: calc(100vh - 180px); border: none;"></iframe>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                            <div class="spinner-border text-info" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? htmlReport;
    private string? errorMessage;
    private string? reportGeneratedTime;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        errorMessage = null;
        htmlReport = null;

        try
        {
            var reportPath = Path.Combine(Environment.WebRootPath, "test-report", "test-results.html");

            if (File.Exists(reportPath))
            {
                htmlReport = await File.ReadAllTextAsync(reportPath);
                var fileInfo = new FileInfo(reportPath);
                reportGeneratedTime = fileInfo.LastWriteTime.ToString("yyyy-MM-dd HH:mm:ss");
            }
            else
            {
                errorMessage = "Test report not found. Please rebuild the container to generate the report.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading report: {ex.Message}";
        }
    }

    private async Task RefreshReport()
    {
        await LoadReport();
        StateHasChanged();
    }
}
