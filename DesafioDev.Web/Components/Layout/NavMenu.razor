@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FinanceApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Upload
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@SwaggerUrl" target="_blank">
                <span class="bi bi-book-nav-menu" aria-hidden="true"></span> Swagger API Docs
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string SwaggerUrl => NavigationManager.BaseUri.Contains("localhost")
        ? "http://localhost:5002/swagger"
        : "https://api-bycoders.pegue.app/swagger";
}

